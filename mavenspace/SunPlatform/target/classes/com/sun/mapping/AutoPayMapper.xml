	<select id="getAll" resultMap="BaseResultMap">
		select HOSPITAL_ID, HOSPITAL_NAME, MEDICAL_CARD_NO, PATIENT_NAME,ORDER_NO,REAL_PAY_FEE,PAY_CARD_NO,OPTION_PAYMENTS,MOBILE,PAYMENT_ID,USER_NAME,PAY_TIME from FRONTEND_CONFIRM_AUTO_PAY
	</select>
	<select id="getWhereEntity" parameterType="com.sun.entity.AutoPayEntity" resultMap="BaseResultMap">
		 SELECT * from FRONTEND_CONFIRM_AUTO_PAY ST
		 <where>
		  <if test="hospitalName!= null and hospitalName!= ''">
		  	ST.HOSPITAL_NAME = #{hospitalName}
		  </if>
		  <if test="medicalCardNo!= null and medicalCardNo!= ''">
		  	AND ST.MEDICAL_CARD_NO = #{medicalCardNo}
		  </if>
		  <if test="payCardNo!= null and payCardNo!= ''">
		  	AND ST.PAY_CARD_NO = #{payCardNo}
		  </if>
		   <if test="mobile!= null and mobile!= ''">
		  	AND ST.MOBILE = #{mobile}
		  </if>
		  <if test="orderNo!= null and orderNo!=''">
		  	AND ST.ORDER_NO = #{orderNo}
		  </if>
		  <if test="userName!= null and userName!= ''">
		  	AND ST.PATIENT_NAME = #{userName}
		  </if>
		  <if test="startDate!= null and startDate!= ''">
		  	AND PAY_TIME BETWEEN #{startDate} AND #{endDate}
		  </if>
		  <if test="states!= null and states!= ''">
		  	AND STATES = #{states}
		  </if>
 		</where>
 		ORDER BY PAY_TIME DESC;
	</select>
	
